<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/kayitlogo"
        android:background="@drawable/kayit_yuvarlak"
        android:layout_marginTop="80dp" android:padding="25dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_person"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/kayittelefontextview"
        android:layout_toLeftOf="@+id/kayitlogo"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/kayitlogo"
        android:textColor="@color/siyah"
        android:textSize="14dp"
        android:text="TELEFON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:layout_toRightOf="@+id/kayitlogo"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/kayitlogo"
        android:id="@+id/kayitepostatextview"
        android:textColor="@color/gri3"
        android:textSize="14dp"
        android:text="E-POSTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"
        android:background="@color/gri2"
        android:layout_below="@+id/kayittelefontextview"
        android:layout_width="match_parent" android:layout_height="1dp"/>
    <View
        android:id="@+id/telefonview"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:background="@color/siyah"
        android:layout_below="@+id/kayittelefontextview"
        android:layout_width="180dp" android:layout_height="2dp"/>
    <EditText
        android:layout_marginTop="30dp"
        android:inputType="phone"
        android:textColor="@color/siyah"
        android:background="@drawable/giris"
        android:padding="20dp"
        android:textColorHint="@color/koyugri"
        android:id="@+id/kayitedittext"
        android:textSize="12dp"
        android:hint="Telefon"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/telefonview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/kayitsmsyazitextview"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/kayitedittext"
        android:text="Instagram'dan SMS güncellemeleri alabilir ve bu güncellemeleri istediğin zaman durdurabilirsin."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:elevation="0dp"
        android:enabled="false"
        android:id="@+id/kayitileributton"
        android:textColor="@color/beyaz"
        android:text="İleri"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:background="@drawable/ileri"
        android:layout_below="@id/kayitsmsyazitextview"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:id="@+id/epostaview"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"
        android:background="@color/siyah"
        android:layout_below="@+id/kayitepostatextview"
        android:layout_width="180dp"
        android:layout_height="2dp"/>
    <View
        android:background="@color/gri2"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/kayitaltyazi"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:id="@+id/kayitaltyazi"
        android:textColor="@color/gri3"
        android:textSize="11dp"
        android:layout_marginBottom="20dp"
        android:text="Hesabın zaten var mı?"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/giristextview"
        android:textColor="@color/siyah"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/kayitaltyazi"
        android:textStyle="bold" android:text="Giriş yap."
        android:textSize="11dp" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>