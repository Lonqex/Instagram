<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/beyaz" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:elevation="2dp"
        android:background="@color/beyaz"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/geri"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/siyah"
            android:layout_marginLeft="50dp"
            android:textSize="17dp"
            android:text="Yorumlar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylerview"
            android:layout_marginBottom="1dp"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/frame2"
            android:layout_height="match_parent"/>




    <FrameLayout
        android:id="@+id/frame2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:background="@color/gri2"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <EditText
            android:id="@+id/yorum"
            android:paddingLeft="20dp"
            android:layout_marginTop="2dp"
            android:hint="Yorum yap..."
            android:textSize="13dp"
            android:background="@color/beyaz"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:src="@drawable/ic_check"
            android:layout_gravity="right"
            android:background="@color/mavi"
            android:padding="11dp"
            android:tint="@color/beyaz"
            android:id="@+id/yorum_yap"
            android:layout_width="50dp"
            android:layout_height="50dp"/>



    </FrameLayout>



</RelativeLayout>