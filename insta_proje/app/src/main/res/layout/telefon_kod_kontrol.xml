<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_marginTop="80dp"
        android:inputType="number"
        android:textColor="@color/siyah"
        android:background="@drawable/giris"
        android:padding="17dp"
        android:textColorHint="@color/koyugri"
        android:id="@+id/kodgir"
        android:textSize="14dp"
        android:hint="Kodu gir"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/instagramlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button

        android:elevation="0dp"
        android:id="@+id/kodileri"
        android:textColor="@color/beyaz"
        android:text="İleri"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:background="@drawable/ileriaktif"
        android:layout_below="@id/kodgir"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/gri2"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/kayitaltyazi"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:id="@+id/kayitaltyazi"
        android:textColor="@color/gri3"
        android:textSize="11dp"
        android:layout_marginBottom="20dp"
        android:text="Hesabın zaten var mı?"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/giristextview"
        android:textColor="@color/siyah"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/kayitaltyazi"
        android:textStyle="bold" android:text="Giriş yap."
        android:textSize="11dp" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>